    block body
        nav.navbar.navbar-expand-lg.navbar-light.bg-light
            a.navbar-brand(href="#") LawyerUp
            button.navbar-toggler(type="button", data-toggle="collapse", data-target="#lawyerNavbar", aria-controls="lawyerNavbar", aria-expanded="false")
                span.navbar-toggler-icon

            .collapse.navbar-collapse(id="lawyerNavbar")
                ul.navbar-nav.mr-auto
                    //- li.nav-item
                    //-     a.nav-link(href="#") Link 1
                    //- li.nav-item
                    //-     a.nav-link(href="#") Link 2
                    //- li.nav-item
                    //-     a.nav-link(href="#") Link 3
                ul.navbar-nav.float-right
                    form(role='form', method='POST', action='/logout')
                        input(type="hidden",id="message",name="message",value="You are now logged out.")
                        button.btn.btn-warning.btn-md(type='submit') Logout

        .container
            div.row.justify-content-md-center
                div.col
                    h1.display-4 Hello, #{firstName}
                    div.card.card-cascade(style="width: 24rem")
                        div.view.view-cascade.overlay.shadow-box
                            img.card-img-top(src="images/bg_lawyer-signup.jpg", alt="Card image cap")
                            a
                                div.mask.rgba-white-slight
                        div.card-body.card-body-cascade.shadow-box
                            h1.card-title.text-center Lawyer
                            div.hide-overflow.d-flex.justify-content-center
                                i.fas.fa-phone-square-alt(style="padding: 7px; text-align: center")
                                p.card-text #{phoneNumber}
                            div.hide-overflow.d-flex.justify-content-center
                                i.fas.fa-envelope-square(style=" padding: 7px; text-align: center")
                                p.card-text #{email}
                            div.d-flex.justify-content-center
                                a.btn.btn-warning(href="#", style="padding:7px") Edit Info
                div.col
                    p.display-4 Appointments
                    //- Appointment cards
                    div.list-group
                        //- List all appointments
                        each item in appointments
                            //-  appointment requests
                            if item.apptAccepted == null
                                a.list-group-item.list-group-item-action.flex-column.align-items-start.mb-1.shadow
                                    div.d-flex.w-100.justify-content-between
                                        h5.mb-1 #{item.firstName} #{item.lastName}
                                        label.badge.badge-warning 
                                            span.align-middle APPOINTMENT REQUEST
                                    div.hide-overflow.d-flex
                                        i.fas.fa-envelope-square.mr-1.mt-1
                                        p.mb-1 #{item.email}
                                    div.hide-overflow.d-flex
                                        i.fas.fa-phone-square-alt.mr-1.mt-1
                                        p.mb-1 #{item.phoneNumber}
                                    small.m-1 Select Appointment Date
                                    form.form-inline(role='form', method='POST', action='/acceptAppt', id="acceptAppt=" + item.id, name="acceptAppt=" + item.id)
                                        //- input(id='clientId', name='clientId', type='hidden', value=item.id)
                                        input(id='apptId', name='apptId', type='hidden', value=item.apptId)
                                        div.input-group.m-1(style='width:50%;')
                                            span.input-group-addon 
                                                i.fas.fa-calendar-alt.mt-2.mr-1
                                            input.form-control.input-sm(id="date", name="date", type='date', value= moment(moment().format('L')).format('YYYY-MM-DD'))
                                        div.input-group.m-1(style='width:40%;')
                                            span.input-group-addon 
                                                i.fas.fa-clock.mt-2.mr-1
                                            input.form-control(id="time", name="time", type='time', value= moment(moment().startOf('minute').toDate()).format('hh:mm:ss'))
                                        button.btn.btn-success.btn-sm.m-1(type='submit', name='submitAppt', value='accept') ACCEPT
                                        button.btn.btn-danger.btn-sm.m-1(type='submit', name='submitAppt', value='decline') DECLINE
                            //- appointment not ready
                            //- else if item.apptAccepted == 1 && item.apptReady == 0
                            //-     a.list-group-item.list-group-item-action.flex-column.align-items-start.mb-1.shadow
                            //-         div.d-flex.w-100.justify-content-between
                            //-             h5.mb-1 #{item.firstName} #{item.lastName}
                            //-             label.badge.badge-secondary 
                            //-                 span.align-middle UPCOMING APPOINTMENT
