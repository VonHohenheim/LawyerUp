                            //-         div.hide-overflow.d-flex
                            //-             i.fas.fa-phone-square-alt.mr-1.mt-1
                            //-             p.mb-1 #{item.phoneNumber}
                            //-         small.mb-1 Appointment Date
                            //-         div.hide-overflow.d-flex
                            //-             i.fas.fa-calendar-alt.mr-2.mt-1
                            //-             p.mb-1= moment(item.apptDate).format('lll')
                            //- appointment past
                            else if item.apptAccepted == 1 && item.apptReady == -1
                                a.list-group-item.list-group-item-action.flex-column.align-items-start.mb-1.shadow
                                    div.d-flex.w-100.justify-content-between
                                        h5.mb-1 #{item.firstName} #{item.lastName}
                                        label.badge.badge-dark 
                                            span.align-middle PAST APPOINTMENT 
                                    div.hide-overflow.d-flex
                                        i.fas.fa-envelope-square.mr-1.mt-1
                                        p.mb-1 #{item.email}
                                    div.hide-overflow.d-flex
                                        i.fas.fa-phone-square-alt.mr-1.mt-1
                                        p.mb-1 #{item.phoneNumber}
                                    small.mb-1 Appointment Date
                                    div.hide-overflow.d-flex
                                        i.fas.fa-calendar-alt.mr-2.mt-1
                                        p.mb-1= moment(item.apptDate).format('lll')
                            //- appointment READY
                            else if item.apptAccepted == 1 && item.apptReady == 1
                                a.list-group-item.list-group-item-action.flex-column.align-items-start.mb-1.shadow
                                    div.d-flex.w-100.justify-content-between
                                        h5.mb-1 #{item.firstName} #{item.lastName}
                                        label.badge.badge-primary 
                                            span.align-middle APPOINTMENT READY!
                                    div.hide-overflow.d-flex
                                        i.fas.fa-envelope-square.mr-1.mt-1
                                        p.mb-1 #{item.email}
                                    div.hide-overflow.d-flex
                                        i.fas.fa-phone-square-alt.mr-1.mt-1
                                        p.mb-1 #{item.phoneNumber}
                                    small.mb-1 Appointment Date
                                    div.hide-overflow.d-flex
                                        i.fas.fa-calendar-alt.mr-2.mt-1
                                        p.mb-1= moment(item.apptDate).format('lll')
                                    form.form-inline(role='form', method='POST', action='/launchVideo')
                                        input(id='apptId', name='apptId', type='hidden', value=item.apptId)
                                        button.btn.btn-primary.btn-sm.mb-2(type='submit') LAUNCH CHAT 
                            //- appointment declined
                            else if item.apptAccepted == 0
                                a.list-group-item.list-group-item-action.flex-column.align-items-start.mb-1.shadow
                                    div.d-flex.w-100.justify-content-between
                                        h5.mb-1 #{item.firstName} #{item.lastName}
                                        label.badge.badge-danger 
                                            span.align-middle DECLINED APPOINTMENT 
                                    div.hide-overflow.d-flex
                                        i.fas.fa-envelope-square.mr-1.mt-1
                                        p.mb-1 #{item.email}
                                    div.hide-overflow.d-flex
                                        i.fas.fa-phone-square-alt.mr-1.mt-1
                                        p.mb-1 #{item.phoneNumber}

  
